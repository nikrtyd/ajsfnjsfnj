let fs = require('fs');

fs.writeFileSync('./Untitled-1.html', fasthackreplacehexwithrootcolorintext(fs.readFileSync('./Untitled-1.html', 'utf8')));
fs.writeFileSync('./Untitled-2.html', fasthackreplacehexwithrootcolorintext(fs.readFileSync('./Untitled-2.html', 'utf8')));
fs.writeFileSync('./Untitled-3.html', fasthackreplacehexwithrootcolorintext(fs.readFileSync('./Untitled-3.html', 'utf8')));
fs.writeFileSync('./Untitled-7.html', fasthackreplacehexwithrootcolorintext(fs.readFileSync('./Untitled-7.html', 'utf8')));
fs.writeFileSync('./Untitled-8.html', fasthackreplacehexwithrootcolorintext(fs.readFileSync('./Untitled-8.html', 'utf8')));
fs.writeFileSync('./Untitled-9.html', fasthackreplacehexwithrootcolorintext(fs.readFileSync('./Untitled-9.html', 'utf8')));

function fasthackreplacehexwithrootcolorintext (text) {
  text = text.replaceAll('body-background'         ,'var(--body-background)'                              );
  text = text.replaceAll('body-foreground'         ,'var(--body-foreground)'                              );
  text = text.replaceAll('body-background-locked'  ,'var(--body-background-locked)'                                     )                              ;
  text = text.replaceAll('body-foreground-locked'  ,'var(--body-foreground-locked)'                              );
  text = text.replaceAll('button-background'       ,'var(--button-background)'                              );
  text = text.replaceAll('button-background-active','var(--button-background-active)'                              );
  text = text.replaceAll('button-border'           ,'var(--button-border)'                              );
  text = text.replaceAll('system-before'           ,'var(--system-before)'                                                            );
  text = text.replaceAll('good'                    ,'var(--good)'                                                            );
  text = text.replaceAll('bad'                     ,'var(--bad)'                                                              );
  return text;
}
